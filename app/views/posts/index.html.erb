<div class="spacer_vertical">
  Add a <%= link_to 'new post', new_post_path %>.
</div>

<% @posts.each do |post| %>
    <div class="entry">
      <%= post.content %>

      <div class="posted_info">
        Posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %>.
      </div>

    </div>

<% end %>


